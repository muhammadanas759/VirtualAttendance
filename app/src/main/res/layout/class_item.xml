<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:orientation="vertical"
    app:cardCornerRadius="12dp"
    app:cardElevation="20dp"
    android:layout_margin="15dp">
    <FrameLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        >
        <TextView
            android:id="@+id/menu_class"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="BSCS-15"
            android:textColor="@color/white"
            android:background="@color/dark"
            android:layout_gravity="top"
            android:gravity="center_horizontal"
            android:textSize="20sp"
            android:textStyle="bold"
            />
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="10dp"
            android:weightSum=".4"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_books_black_24dp"
                android:backgroundTint="@color/dark"
                android:layout_weight="0.1"
                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/dark"
                android:src="@drawable/ic_student"
                android:layout_weight="0.1"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/dark"
                android:paddingTop="5dp"
                android:src="@drawable/ic_credithour_24dp"
                android:layout_weight="0.1"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:backgroundTint="@color/dark"
                android:src="@drawable/ic_class_24dp"
                android:layout_weight="0.1"
                />


        </LinearLayout>

        <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:orientation="vertical"
         android:layout_marginTop="30dp"
         android:layout_marginBottom="30dp"
            android:layout_marginLeft="40dp"
        android:weightSum=".4"
        >
        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Subject :"
            android:textColor="@color/dark"
        android:textSize="15dp"
            android:layout_weight="0.1"
        />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No.Of Student :"
                android:textColor="@color/dark"
                android:textSize="15dp"
                android:layout_weight="0.1"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Credit Hour :"
                android:textSize="15dp"
                android:textColor="@color/dark"
                android:layout_weight="0.1"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Section :"
                android:textColor="@color/dark"
                android:textSize="15dp"
                android:layout_weight="0.1"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="150dp"
            android:weightSum=".4"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="null"
                android:id="@+id/cart_sub"
                android:textSize="15dp"
                android:textColor="@color/dark"
                android:layout_weight="0.1"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="null"
                android:id="@+id/cart_std"
                android:textSize="15dp"
                android:textColor="@color/dark"
                android:layout_weight="0.1"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="null"
                android:id="@+id/cart_credit"
                android:textSize="15dp"
                android:textColor="@color/dark"
                android:layout_weight="0.1"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="null"
                android:id="@+id/cart_section"
                android:textSize="15dp"
                android:textColor="@color/dark"
                android:layout_weight="0.1"
                />


        </LinearLayout>

        <TextView
            android:id="@+id/menu_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="text of menu"
            android:textColor="@color/white"
            android:background="@color/dark"
            android:layout_gravity="bottom"
            android:gravity="center_horizontal"
            android:textSize="20sp"
            android:textStyle="bold"
            />

    </FrameLayout>

</android.support.v7.widget.CardView>
